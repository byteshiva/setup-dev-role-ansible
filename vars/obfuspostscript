---
cmd1: find {{koreserver_dir}} -path {{exclude_path1}} -prune -o -path {{exclude_path2}} -prune -o -name "{{search_pattern}}" -print
cmd2: egrep -v "({{exclude_files}})$"
cmd3: xargs rm -rf {}
